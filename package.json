{
  "name": "xq-fitness-write-service",
  "version": "1.0.0",
  "description": "Write service for XQ Fitness application",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --config jest.config.unit.js --coverage",
    "test:component": "jest --config jest.config.component.js --runInBand",
    "test:component:local": "API_BASE_URL=http://localhost:8080/xq-fitness-write-service/api/v1 HEALTH_CHECK_URL=http://localhost:8080/xq-fitness-write-service/health jest --config jest.config.component.js --runInBand",
    "test:component:watch": "jest --config jest.config.component.js --watch",
    "test:component:ci": "jest --config jest.config.component.js --runInBand --ci --reporters=default --reporters=jest-junit",
    "test:all": "npm run test:unit && npm run test:component",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "generate:client": "./scripts/generate-api-client.sh write-service",
    "clean:clients": "rm -rf generated-clients/"
  },
  "keywords": [
    "fitness",
    "workout",
    "api"
  ],
  "author": "XQ Fitness Team",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "pg": "^8.16.3",
    "pg-pool": "^3.6.1"
  },
  "devDependencies": {
    "@chauhaidang/xq-js-common-kit": "1.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.5.0",
    "@types/pg": "^8.16.0",
    "@types/wait-on": "^5.3.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.0",
    "ts-node": "latest",
    "typescript": "^5.5.4",
    "wait-on": "^8.0.1",
    "xq-fitness-write-client": "file:./generated-clients/write-service"
  },
  "jest-junit": {
    "outputDirectory": "./test/component/tsr",
    "outputName": "junit.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}
